{{layout "uuf.foundation.layout.default"}}
{{#headerTitle}}Pet Store | Add New Pet Type | WSO2{{/headerTitle}}
{{#fillZone "logo.productName"}}Pet Store{{/fillZone}}
{{#fillZone "content"}}
    <form method="post">
        <label for="typeList">Pet Type:</label>
        <select id="typeList">
            {{#each petTypes}}
                <option id="{{id}}" value="{{name}}"></option>
            {{/each}}
        </select><br/>
        <label for="name">Pet Name:</label><input type="text" id="name"/>
        <label for="name">Pet Image:</label><input type="file" id="image"/>
        <input type="submit" value="Add"/>
        <input type="reset" value="Clear All"/>
    </form>
{{/fillZone}}